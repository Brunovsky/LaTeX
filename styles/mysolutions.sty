% SOLUTION'S ENVIRONMENTS
\newenvironment{problemset}[1]
    {
    \section{#1}}
    {}

\newenvironment{problem}[1]
    {
    \subsection{#1}}
    {\\}

\newenvironment{solution}
    {\begin{proof}[Solução]}
    {\end{proof}}

\newenvironment{anchor}
    {$\downharpoonright$}
    {$\upharpoonleft$}

\newenvironment{note}
    {\small \begin{anchor}}
    {\end{anchor}}

\newenvironment{smallnote}
    {\footnotesize \begin{anchor}}
    {\end{anchor}}

\newenvironment{quickproof}
    {Prova. \begin{anchor}}
    {\end{anchor}}

\newenvironment{lemma}[1][Lema]
    {\uline{#1} }
    {}

\newenvironment{observation}[1]
    {\uline{#1.} \begin{note}}
    {\end{note}}



